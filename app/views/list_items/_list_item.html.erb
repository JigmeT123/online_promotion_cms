<div class="columns align-items-center">
  <div class="column is-1">
    <%= list_item.quantity %>
  </div>
  <div class="column is-2">
    <figure class="is-128x128 image">
      <%= image_tag(list_item.clothing.image.url(:thumb)) %>
    </figure>
  </div>
  <div class="column is-9">
    <strong><%= list_item.clothing.title %></strong>
    <div class="columns align-items-center">
      <div class="content column is-9">
        <%= truncate(list_item.clothing.description, length: 140) %>
      </div>
      <div class="column is-3 has-text-right">
        <strong class="f4"><%= number_to_currency(list_item.total_price) %></strong>
      </div>
    </div>
  </div>
</div>

<div class="has-text-right">
  <%= link_to 'Remove Item', list_item, method: :delete, data: { confirm: "Are you sure? " }, class: "button is-small mb4" %>
</div>

<hr/ >